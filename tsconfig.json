{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/types": [
                "src/types"
            ],
            "@/utils": [
                "src/utils"
            ],
            "@/core": [
                "src/core"
            ],
            "@/config": [
                "src/config"
            ]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "1_zip",
        "2_data",
        "3_output"
    ]
}
